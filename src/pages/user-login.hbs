---
title: Авторизация
---

{{!< main}}

<div class="modal">
  <h1 class="modal__title">Вход</h1>
  <div class="modal__body">
    <form action="./index.hbs">
      <div class="form-group">
        <label for="auth-login" class="form-label">Логин</label>
        <input type="text" name="login" class="form-control" id="auth-login" required>
      </div>
      <div class="form-group">
        <label for="auth-password" class="form-label">Пароль</label>
        <input type="password" name="password" class="form-control" id="auth-password" required>
      </div>
      <div class="form-group form-group_btns">
        <button class="btn btn_primary w-100" type="submit">Войти</button>
      </div>
      <div class="form-group text-center">
        <a href="./user-register.hbs">Нет аккаунта?</a>
      </div>
    </form>
  </div>
</div>
