---
title: Регистрация
---

{{!< main}}

<div class="modal">
  <h1 class="modal__title">Регистрация</h1>
  <div class="modal__body">
    <form>
      <div class="form-group">
        <label for="register-email" class="form-label">Почта</label>
        <input type="email" name="email" class="form-control" id="register-email" required>
      </div>
      <div class="form-group">
        <label for="register-login" class="form-label">Логин</label>
        <input type="text" name="login" class="form-control" id="register-login" required>
      </div>
      <div class="form-group">
        <label for="register-first_name" class="form-label">Имя</label>
        <input type="text" name="first_name" class="form-control" id="register-first_name" required>
      </div>
      <div class="form-group">
        <label for="register-second_name" class="form-label">Фамилия</label>
        <input type="text" name="second_name" class="form-control" id="register-second_name" required>
      </div>
      <div class="form-group">
        <label for="register-phone" class="form-label">Телефон</label>
        <input type="tel" name="phone" class="form-control" id="register-phone" required>
      </div>
      <div class="form-group">
        <label for="register-password" class="form-label">Пароль</label>
        <input type="password" name="password" class="form-control" id="register-password" required>
      </div>
      <div class="form-group">
        <label for="register-password-confirm" class="form-label">Пароль (ещё раз)</label>
        <input type="password" name="password-confirm" class="form-control" id="register-password-confirm" required>
      </div>
      <div class="form-group form-group_btns">
        <button class="btn btn_primary w-100" type="submit">Зарегистрироваться</button>
      </div>
      <div class="form-group text-center">
        <a href="./user-login.hbs">Войти</a>
      </div>
    </form>
  </div>
</div>
