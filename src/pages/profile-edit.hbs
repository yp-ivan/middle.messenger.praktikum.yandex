---
title: Редактирование профиля
styles:
  - '../styles/page-profile.scss'
---

{{!< main}}

<div class="fbox">

  <a class="profile__back" href="./profile.hbs"></a>

  <main class="profile">

    <div class="profile-data">

      <form>

        <div class="avatar profile-avatar">
          <label for="profile-avatar" class="profile-avatar_edit">Поменять аватар</label>
          <input type="file" name="avatar" id="profile-avatar" class="profile-avatar__input">
        </div>

        <div class="profile-list">
          <div class="profile-item">
            <label class="profile-item__name" for="profile-email">Почта</label>
            <div class="profile-item__edit">
              <input type="email" name="email" class="form-control_profile" id="profile-email" value="pochta@yandex.ru" required>
            </div>
          </div>
          <div class="profile-item">
            <label class="profile-item__name" for="profile-login">Логин</label>
            <div class="profile-item__edit">
              <input type="text" name="login" class="form-control_profile" id="profile-login" value="ivanivanov" required>
            </div>
          </div>
          <div class="profile-item">
            <label class="profile-item__name" for="profile-first_name">Имя</label>
            <div class="profile-item__edit">
              <input type="text" name="first_name" class="form-control_profile" id="profile-first_name" value="Иван">
            </div>
          </div>
          <div class="profile-item">
            <label class="profile-item__name" for="profile-second_name">Фамилия</label>
            <div class="profile-item__edit">
              <input type="text" name="second_name" class="form-control_profile" id="profile-second_name" value="Иванов">
            </div>
          </div>
          <div class="profile-item">
            <label class="profile-item__name" for="profile-nick">Имя в чате</label>
            <div class="profile-item__edit">
              <input type="text" name="nick" class="form-control_profile" id="profile-nick" value="Иван">
            </div>
          </div>
          <div class="profile-item">
            <label class="profile-item__name" for="profile-phone">Телефон</label>
            <div class="profile-item__edit">
              <input type="tel" name="phone" class="form-control_profile" id="profile-phone" value="+7 (909) 967 30 30">
            </div>
          </div>
        </div>

        <div class="form-group form-group_btns">
          <button class="btn btn_primary w-100" type="submit">Сохранить</button>
        </div>

      </form>

    </div>

  </main>

</div>
