{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "typings/app.d.ts"
    ],
    "paths": {
      "assets": ["src/assets"],
      "api": ["src/api"],
      "components": ["src/components"],
      "core": ["src/core"],
      "data": ["src/data"],
      "helpers": ["src/helpers"],
      "pages": ["src/pages"],
      "router": ["src/router"],
      "services": ["src/services"],
      "store": ["src/store"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
